            //jdbc
            put("jdbc.driver", "com.mysql.cj.jdbc.Driver");
            put("jdbc.url", "jdbc:mysql://127.0.0.1:3306/dsat_auto_push?characterEncoding=UTF-8&serverTimezone=UTC");
